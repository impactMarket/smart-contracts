{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": [
            "node",
            "truffle-contracts",
            "mocha"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "node_modules",
        "example",
        "build"
    ]
}
