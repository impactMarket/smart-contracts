{
    "name": "@impact-market/smart-contracts",
    "version": "0.0.1",
    "description": "Decentralized impact-driven 2-sided marketplace to provide financial services to charities and vulnerable beneficiaries.",
    "scripts": {
        "account": "node utils/createAccount.js",
        "pretest": "yarn generate-ts-dev",
        "test": "scripts/test.sh",
        "pretest:ci": "yarn generate-ts-dev",
        "test:ci": "CI=true scripts/test.sh",
        "coverage": "SOLIDITY_COVERAGE=true scripts/test.sh",
        "precoverage:ci": "yarn generate-ts-dev",
        "coverage:ci": "CI=true SOLIDITY_COVERAGE=true scripts/test.sh",
        "generate-ts-dev": "truffle compile && typechain --target=truffle-v5 'build/contracts/*.json'",
        "generate-ts": "truffle compile && typechain --target ethers-v5 --outDir types/contracts/ethers './build/contracts/*.json'",
        "lint:ts": "eslint \"test/**/*.ts\"",
        "lint:sol": "solhint \"./contracts/**/*.sol\"",
        "lint": "yarn lint:ts && yarn lint:sol",
        "security": "slither . --filter-paths \"@openzeppelin|test|Migrations.sol\" --truffle-version truffle@5.1.29 --exclude-informational --exclude-low",
        "localnet": "ganache-cli --gasLimit 0xfffffffffff --port 8545",
        "prettier": "prettier --write \"./test/**/**/*.ts\"",
        "eslint": "eslint --fix \"./test/**/**/*.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/impactMarket/smart-contracts.git"
    },
    "author": "impact-market",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/impactMarket/smart-contracts/issues"
    },
    "homepage": "https://github.com/impactMarket/smart-contracts#readme",
    "engines": {
        "node": "14.15.1"
    },
    "dependencies": {
        "@celo/contractkit": "0.4.18",
        "@openzeppelin/contracts": "3.2.0"
    },
    "devDependencies": {
        "@babel/core": "7.12.9",
        "@codechecks/client": "0.1.10",
        "@openzeppelin/test-helpers": "0.5.9",
        "@typechain/ethers-v5": "4.0.0",
        "@typechain/truffle-v5": "3.0.0",
        "@types/bignumber.js": "5.0.0",
        "@types/bn.js": "4.11.6",
        "@types/chai": "4.2.14",
        "@types/mocha": "8.0.4",
        "@types/node": "14.14.10",
        "@types/web3": "1.2.2",
        "@typescript-eslint/eslint-plugin": "4.9.0",
        "@typescript-eslint/parser": "4.9.0",
        "bignumber.js": "9.0.1",
        "chai": "4.2.0",
        "coveralls": "3.1.0",
        "dotenv": "8.2.0",
        "eslint": "7.14.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-config-universe": "6.0.0",
        "eth-gas-reporter": "0.2.20",
        "ethers": "5.0.23",
        "ganache-cli": "6.12.1",
        "prettier": "2.2.1",
        "solhint": "3.3.2",
        "solidity-coverage": "0.7.13",
        "truffle": "5.1.56",
        "ts-node": "9.1.0",
        "typechain": "4.0.0",
        "typescript": "4.1.2"
    }
}
